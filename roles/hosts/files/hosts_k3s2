127.0.0.1 localhost
127.0.1.1 k3s2

# The following lines are desirable for IPv6 capable hosts
::1     ip6-localhost ip6-loopback
fe00::0 ip6-localnet
ff00::0 ip6-mcastprefix
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters

# Linux Kubernetes
0.0.0.0 k3s1.domain.local           k3s1 # kubernetes master
0.0.0.0 k3s2.domain.local           k3s2 # kubernetes node-1
0.0.0.0 k3s3.domain.local           k3s3 # kubernetes node-2